
            <table class = "table table-hover table-inverse">
              <thead>
                  <tr>
                      <th>商品画像</th>
                      <th>商品名</th>
                      <th>紹介文</th>
                      <th>単価(税込)</th>
                  </tr>
              </thead>
              <tbody>
                  <% @items.each do |f| %>
                    <tr>
                        <td>
                          <%= link_to public_item_path(f) do %>
                            <% if f.image.attached? %>
                              <%= image_tag f.image, size: "200x200" %>
                            <% else %>
                              <%= image_tag 'no_image', size: "200x200" %>
                            <% end %>
                          <% end %>
                        </td>
                        <td>
                          <div class = "d-flex align-items-center justify-content-center">
                            <%= f.name %>
                          </end>
                        </td>
                        <td>
                          <div class = "d-flex align-items-center justify-content-center">
                            <%= f.introduction %>
                          </div>
                        </td>
                        <td>
                          <div class = "d-flex align-items-center justify-content-center">
                            <%= f.with_tax_price %>
                          </div>
                        </td>
                    </tr>
                  <% end %>
              </tbody>
            </table>
            <table>
             <thead>
              <tr>
               <th>小計</th>
              </tr>
             </thead>
             <tbody>
              <% @cart_items.each do |f| %>
                <tr>
                 <td><%= f.subtotal %></td>
                 <td><% @total +=  f.subtotal %></td>
                </tr>
              <% end %>
             </tbody>
            </table>
