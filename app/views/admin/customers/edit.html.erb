<h1>顧客情報編集</h1>
<%= form_with model: @customer, url: admin_customers_path, method: :patch do |f| %>
  <h6>性</h6>
  <div class = "d-flex align-items-center-justify-content-center">
    <%= f.last_name %>
  </div>
  <h6>名</h6>
  <div class = "d-flex align-items-center-justify-content-center">
    <%= f.first_name %>
  </div>
  <h6>性カナ</h6>
  <div class = "d-flex align-items-center-justify-content-center">
    <%= f.last_name_kana %>
  </div>
   <h6>名カナ</h6>
  <div class = "d-flex align-items-center-justify-content-center">
    <%= f.first_name_kana %>
  </div>
  <h6>郵便番号</h6>
  <div class = "d-flex align-items-center-justify-content-center">
    <%= f.postal_code %>
  </div>
  <h6>住所</h6>
  <div class = "d-flex align-items-center-justify-content-center">
    <%= f.address %>
  </div>
  <h6>電話番号</h6>
  <div class = "d-flex align-items-center-justify-content-center">
    <%= f.telephone_number %>
  </div>
  <%= f.submit '編集' %>

<% end %>
