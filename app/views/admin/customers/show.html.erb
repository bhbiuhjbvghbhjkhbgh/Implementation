<h1>顧客詳細情報</h1>
<table class = "table table-hover table-inverse">
  <thead>
     <tr>
     <th>名前</th>
      <th>
        郵便番号
      </th>
      <th>
        住所
      </th>
      <th>
        携帯番号
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= @customer.last_name + @customer.first_name %>
      </td>
      <td>
        <%= @customer.postal_code %>
      </td>
      <td>
        <%= @customer.address %>
      </td>
      <td>
        <%= @customer.telephone_number %>
      </td>
    </tr>
  </tbody>
</table>
