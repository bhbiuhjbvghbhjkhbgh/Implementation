<h1>商品編集</h1>

<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
  <h6>商品名</h6>
  <div class = "d-flex align-items-center justify-content-center">
    <%= f.text_field :name, autofocus: true %>
  </div>
  <h6>紹介文</h6>
  <div class = "d-flex align-items-center justify-content-center">
    <%= f.text_area :introduction %>
  </div>
  <h6>価格</h6>
  <div class = "d-flex align-items-center justify-content-center">
    <%= f.number_field :price %>
  </div>
  <div class = "d-flex align-items-center justify-content-center">
    <%= f.submit "変更" %>
  </div>
<% end %>
