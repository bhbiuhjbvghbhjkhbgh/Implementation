<h1>商品詳細ページ</h1>

            <table class = "table table-hover">
              <thead>
                  <tr>
                      <th>商品名</th>
                      <th>紹介文</th>
                      <th>価格</th>
                  </tr>
              </thead>
              <tbody>
                    <tr>
                        <td>
                          <div class = "d-flex align-items-center justify-content-center">
                            <%= @item.name %>
                          </div>
                        </td>
                        <td>
                          <div class = "d-flex align-items-center justify-content-center">
                            <%= @item.introduction %>
                          </div>
                        </td>
                        <td>
                          <div class = "d-flex align-items-center justify-content-center">
                            <%= @item.price %>
                          </div>
                        </td>
                    </tr>
              </tbody>
            </table>
