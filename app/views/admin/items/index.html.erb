<div class = "container">
    <div class = "row">
        <div class = "col-md-4">
            <%= button_to "新規登録", {controller: "items", action: "new"}, {method: :get } %>
        </div>
        <div class = "col-md-8">
            <table class = "table table-hover table-inverse">
              <thead>
                  <tr>
                      <th>商品名</th>
                      <th>紹介文</th>
                      <th>価格</th>
                  </tr>
              </thead>
              <tbody>
                  <% @items.each do |f| %>
                    <tr>
                        <td>

                          <% if f.image.attached? %>
                            <%= image_tag f.image, size: "200x200" %>
                          <% else %>
                            <%= image_tag 'no_image', size: "200x200" %>
                          <% end %>
                        </td>
                        <td>
                          <div class = "d-flex align-items-center justify-content-center">
                            <%= f.name %>
                          </end>
                        </td>
                        <td>
                          <div class = "d-flex align-items-center justify-content-center">
                            <%= f.introduction %>
                          </div>
                        </td>
                        <td>
                          <div class = "d-flex align-items-center justify-content-center">
                            <%= f.price %>
                          </div>
                        </td>
                    </tr>
                  <% end %>
              </tbody>
            </table>
        </div>
    </div>
</div>
